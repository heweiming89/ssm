<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <properties resource="mbg.properties"/>

    <context id="MyBatis3" targetRuntime="MyBatis3"
             defaultModelType="flat">

        <property name="javaFileEncoding" value="UTF-8"/>

        <plugin type="org.mybatis.generator.plugins.RenameExampleClassPlugin">
            <property name="searchString" value="Example"/>
            <property name="replaceString" value="Criteria"/>
        </plugin>
        <plugin type="org.mybatis.generator.plugins.FluentBuilderMethodsPlugin"/>
        <plugin type="org.mybatis.generator.plugins.RowBoundsPlugin"/>
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>

        <plugin type="cn.heweiming.ssm.mybatis.generator.plugins.CustomToStringPlugin"/>

        <commentGenerator
                type="org.mybatis.generator.internal.DefaultCommentGenerator">
            <property name="suppressChineseAllComments" value="false"/>
            <property name="suppressAllComments" value="false"/>
            <property name="addRemarkComments" value="true"/>
            <property name="suppressDate" value="false"/>
        </commentGenerator>

        <!-- <commentGenerator type="com.example.demo.mybatis.generator.CustomCommentGenerator"> -->
        <!-- <property name="suppressChineseAllComments" value="false" /> -->
        <!-- <property name="suppressAllComments" value="false" /> -->
        <!-- <property name="addRemarkComments" value="true" /> -->
        <!-- <property name="suppressDate" value="false" /> -->
        <!-- </commentGenerator> -->

        <jdbcConnection driverClass="${jdbc.driver}" connectionURL="${jdbc.url}" userId="${jdbc.username}"
                        password="${jdbc.password}">
            <property name="remarksReporting" value="true"/>
        </jdbcConnection>

        <javaModelGenerator targetPackage="${modelPackage}" targetProject="src/main/java"/>

        <sqlMapGenerator targetPackage="${mapperXmlPackage}" targetProject="src/main/resources"/>

        <javaClientGenerator targetPackage="${mapperPackage}" targetProject="src/main/java" type="XMLMAPPER"/>

        <table tableName="t_sys_user" domainObjectName="User">

        </table>

    </context>

</generatorConfiguration>